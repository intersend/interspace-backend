# Test Environment Configuration
NODE_ENV=test
PORT=0

# Database (will be overridden in setup)
DATABASE_URL="file:./prisma/test.db"
ENCRYPTION_SECRET=test-encryption-secret
SILENCE_ADMIN_TOKEN=test-silence-token
SILENCE_NODE_URL=http://localhost:8080
ORBY_INSTANCE_PRIVATE_API_KEY=test-private
ORBY_INSTANCE_PUBLIC_API_KEY=test-public
ORBY_APP_NAME=test-app
ORBY_PRIVATE_INSTANCE_URL=http://localhost:8545

# JWT Configuration - Test Keys
JWT_SECRET=test-jwt-secret-key-for-testing-only-do-not-use-in-production
JWT_REFRESH_SECRET=test-jwt-refresh-secret-key-for-testing-only-do-not-use-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting - Relaxed for tests
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# Redis - Test configuration (use dummy URL)
REDIS_URL=redis://localhost:6379

# External Services - Mock in tests
THIRDWEB_CLIENT_ID=test-client-id
THIRDWEB_SECRET_KEY=test-secret-key
FRONTEND_URL=http://localhost:3000

# Blockchain Configuration - Test values
ETHEREUM_RPC_URL=https://eth-mainnet.alchemyapi.io/v2/test
POLYGON_RPC_URL=https://polygon-mainnet.alchemyapi.io/v2/test

# Logging
LOG_LEVEL=error

# Test-specific flags
VERBOSE_TESTS=false
SKIP_EXTERNAL_CALLS=true
MOCK_BLOCKCHAIN=true
