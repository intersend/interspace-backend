# Database
DATABASE_URL="postgresql://<prod-user>:<prod-pass>@<prod-host>:5432/interspace"

# Server Configuration
PORT=3000
NODE_ENV=production
API_VERSION=v1

# JWT Configuration
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-jwt-refresh-secret-here
JWT_REFRESH_EXPIRES_IN=7d
ENCRYPTION_SECRET=your-32-byte-hex-key

# Silence Labs MPC Configuration
SILENCE_ADMIN_TOKEN=your-silence-admin-token
GOOGLE_CLIENT_ID=your-google-client-id
APPLE_CLIENT_ID=com.interspace.app
SILENCE_NODE_URL=http://localhost:8080

# Orby Configuration
ORBY_INSTANCE_PRIVATE_API_KEY=your-orby-private-key
ORBY_INSTANCE_PUBLIC_API_KEY=your-orby-public-key
ORBY_APP_NAME=interspace
ORBY_PRIVATE_INSTANCE_URL=https://your-orby-instance-url.com

# Frontend URL for share links
FRONTEND_URL=https://app.interspace.com

# Chain Configuration
DEFAULT_CHAIN_ID=1
SUPPORTED_CHAINS=1,10,137,42161,8453

# Security Configuration - PRODUCTION
# CRITICAL: Only include your actual production domains
# NO WILDCARDS (*) ALLOWED IN PRODUCTION
CORS_ORIGINS=https://app.interspace.com,https://interspace.com

# CRITICAL: Must be false in production
BYPASS_LOGIN=false

# Production rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Redis Configuration (Production - Required for distributed features)
REDIS_ENABLED=true
# Use managed Redis service (Redis Cloud, AWS ElastiCache, etc.)
REDIS_URL=redis://username:password@redis-host:6379/0

# Email Service (Production)
EMAIL_SERVICE=sendgrid
SENDGRID_API_KEY=your-production-sendgrid-api-key
EMAIL_FROM=noreply@interspace.com
EMAIL_FROM_NAME=Interspace

# Monitoring & Alerts (Production)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SECURITY_ALERT_EMAIL=security@interspace.com
