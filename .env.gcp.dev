# Google Cloud Platform - Development Environment
# This template shows the structure for GCP Cloud Run deployment

# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database - Cloud SQL PostgreSQL (Development)
# Format: postgresql://username:password@/database?host=/cloudsql/PROJECT_ID:REGION:INSTANCE_NAME
DATABASE_URL="postgresql://interspace_dev:PASSWORD@/interspace_dev?host=/cloudsql/PROJECT_ID:us-central1:interspace-dev-db"

# JWT Configuration - Stored in Google Secret Manager
JWT_SECRET=SECRET_FROM_GOOGLE_SECRET_MANAGER
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=SECRET_FROM_GOOGLE_SECRET_MANAGER
JWT_REFRESH_EXPIRES_IN=7d
ENCRYPTION_SECRET=SECRET_FROM_GOOGLE_SECRET_MANAGER

# Silence Labs MPC Configuration - Development
DISABLE_MPC=false
BYPASS_LOGIN=false
SILENCE_ADMIN_TOKEN=SECRET_FROM_GOOGLE_SECRET_MANAGER
SILENCE_NODE_URL=https://interspace-silence-node-dev-PROJECT_NUMBER.us-central1.run.app
DUO_NODE_URL=https://interspace-duo-node-dev-PROJECT_NUMBER.us-central1.run.app
DUO_NODE_AUDIENCE_URL=https://interspace-duo-node-dev-PROJECT_NUMBER.us-central1.run.app

# Social OAuth - Development
GOOGLE_CLIENT_ID=SECRET_FROM_GOOGLE_SECRET_MANAGER
APPLE_CLIENT_ID=com.interspace.ios
APPLE_TEAM_ID=579ZB4FX6N

# Passkey Configuration - Development
PASSKEY_RP_ID=interspace.app
PASSKEY_ORIGIN=https://interspace.app

# Orby Configuration - Development
ORBY_INSTANCE_PRIVATE_API_KEY=SECRET_FROM_GOOGLE_SECRET_MANAGER
ORBY_INSTANCE_PUBLIC_API_KEY=SECRET_FROM_GOOGLE_SECRET_MANAGER
ORBY_APP_NAME=interspace-dev
ORBY_PRIVATE_INSTANCE_URL=https://orby.dev.interspace.com

# Frontend URL - Development
FRONTEND_URL=https://dev.interspace.fi

# Chain Configuration - Testnet for Development
DEFAULT_CHAIN_ID=11155111
SUPPORTED_CHAINS=11155111,10,137,42161,8453

# Security Configuration - Development
CORS_ORIGINS=http://localhost:3000,http://localhost:19006,https://dev.interspace.fi
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# Google Cloud Specific
GOOGLE_CLOUD_PROJECT=PROJECT_ID
GOOGLE_APPLICATION_CREDENTIALS=/var/secrets/google/key.json

# Redis Configuration - Development (Use Memorystore or Redis Labs)
REDIS_ENABLED=true
REDIS_URL=redis://USERNAME:PASSWORD@redis-12345.c1.us-central1-1.gce.cloud.redislabs.com:12345/0

# Email Service - Development
EMAIL_SERVICE=sendgrid
SENDGRID_API_KEY=SECRET_FROM_GOOGLE_SECRET_MANAGER
EMAIL_FROM=dev@interspace.fi
EMAIL_FROM_NAME=Interspace Dev

# Monitoring - Development
SLACK_WEBHOOK_URL=SECRET_FROM_GOOGLE_SECRET_MANAGER
SECURITY_ALERT_EMAIL=dev-security@interspace.fi