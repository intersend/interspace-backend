# Test Environment Configuration for Docker
NODE_ENV=test
PORT=0
API_VERSION=v1

# Database - using Docker service names
DATABASE_URL="postgresql://postgres:postgres@postgres:5432/interspace_test"
ENCRYPTION_SECRET=0123456789abcdef0123456789abcdef
SILENCE_ADMIN_TOKEN=test-admin-token
SILENCE_NODE_URL=http://localhost:8080
ORBY_INSTANCE_PRIVATE_API_KEY=test-orby-private
ORBY_INSTANCE_PUBLIC_API_KEY=test-orby-public
ORBY_APP_NAME=test-app
ORBY_PRIVATE_INSTANCE_URL=http://localhost:8545

# JWT Configuration - Test Keys
JWT_SECRET=test-jwt-secret-key-for-testing-only-do-not-use-in-production
JWT_REFRESH_SECRET=test-jwt-refresh-secret-key-for-testing-only-do-not-use-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGINS=http://127.0.0.1:3000,http://127.0.0.1:3001

# Rate Limiting - Relaxed for tests
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# External Services - Mock in tests
FRONTEND_URL=http://127.0.0.1:3000

# Blockchain Configuration - Test values

# Logging
LOG_LEVEL=error

# Test-specific flags
VERBOSE_TESTS=false
SKIP_EXTERNAL_CALLS=true
MOCK_BLOCKCHAIN=true

# V2 API Settings (Flat Identity Model)
ENABLE_V2_API=true
AUTO_CREATE_PROFILE=true
DEFAULT_PRIVACY_MODE=linked

# Email Service Configuration (Optional)
# For SendGrid SMTP:
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=apikey
# SMTP_PASS=your-sendgrid-api-key
FROM_EMAIL=noreply@interspace.app
FROM_NAME=Interspace

# Redis for tests
REDIS_ENABLED=true
REDIS_URL=redis://:localpassword@redis:6379/1
# SendGrid Configuration
SENDGRID_API_KEY=test-sendgrid-api-key
